
<!-- @messages comes from actions.rb-->
<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><%= message.title %></a> <small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
  </div>
<% end %>

<a href="/messages/new">Post a message</a>